<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#FFFFFF">

	<ImageView 
		android:id="@+id/imgLogo" android:background="@drawable/mocoven" 
		android:layout_width="160dip" android:layout_height="60dip"
		android:layout_gravity="center_horizontal"
		></ImageView>
	
	<ImageView 
        android:background="@drawable/truthordare" 
        android:layout_width="400dip" android:layout_height="160dip"
        android:layout_gravity="center_horizontal"
        >
        </ImageView>
	
	<ImageButton 
		android:id="@+id/btnPlay" android:background="@drawable/button_start_toggle"
		android:layout_width="160dip" android:layout_height="160dip"
		android:layout_gravity="center_horizontal" android:layout_marginTop="10dip"
		>
	   </ImageButton>
	
	
</LinearLayout>
