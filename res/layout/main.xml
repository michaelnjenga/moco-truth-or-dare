<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#A67F58">

	<ImageView 
		android:id="@+id/imgLogo" android:background="@drawable/logo120" 
		android:layout_width="160px" android:layout_height="160px"
		android:layout_gravity="center_horizontal"
		></ImageView>
	
	<ImageView 
        android:background="@drawable/truthordare" 
        android:layout_width="300px" android:layout_height="80px"
        android:layout_gravity="center_horizontal"
        >
        </ImageView>
	
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="@string/splash_text"
        ></TextView>
	
	
</LinearLayout>
